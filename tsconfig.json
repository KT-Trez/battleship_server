{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "module": "es2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules",
    "server"
  ],
  "include": [
    "server.ts",
    "src"
  ]
}